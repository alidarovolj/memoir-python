# Database Configuration
DATABASE_URL=postgresql://memoir_user:memoir_pass@postgres:5432/memoir
DATABASE_USER=memoir_user
DATABASE_PASSWORD=memoir_pass
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=memoir

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Secret Key (Generate a strong random key for production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Keys
OPENAI_API_KEY=your-openai-api-key

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Firebase Admin SDK (Path to service account JSON)
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# SMS Provider (Optional)
SMS_API_KEY=your-sms-api-key

# Application Settings
ENVIRONMENT=production
DEBUG=False
API_V1_PREFIX=/api/v1

# File Upload Settings
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
